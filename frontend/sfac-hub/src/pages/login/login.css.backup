/* Base palette (kept) */
:root {
	--bg: #ffffff; /* pure white behind the card */
	--surface: #ffffff;
	--text: #0f172a;
	--muted: #475569;
	--accent: #e11d48; /* red */
	--accent-2: #0f172a; /* deep navy for primary */
	--ring: rgba(2, 6, 23, 0.08);
	--ring-strong: rgba(2, 6, 23, 0.22);
	--shadow: 0 20px 60px rgba(2, 6, 23, 0.10);
}

/* Ensure background can fill full viewport */
html, body, #root { height: 100%; }

/* Background gradient similar to reference's soft light */
.login-landing {
	min-height: 100vh;
	height: 100%;
	width: 100%;
	background:
		linear-gradient(180deg, #ffffff 0%, #ffffff 28%, #f7fbff 52%, #ffffff 100%);
	background-repeat: no-repeat;
	background-size: cover;
	background-position: center;
	color: var(--text);
	display: flex;
	flex-direction: column;
}

.container { width: min(1100px, 92%); margin: 0 auto; }

/* Centered stage */
.center-stage { display:flex; align-items:center; justify-content:center; flex:1; padding: clamp(32px, 6vw, 72px) 16px; }

/* Card */
.login-card {
	width: min(400px, 100%);
	background: var(--surface);
	border-radius: 16px;
	box-shadow: var(--shadow);
	border: 1px solid rgba(15,23,42,.06);
	padding: clamp(24px, 4vw, 36px) clamp(20px, 3.2vw, 32px) 24px;
	text-align: center;
}
.card-logo-wrap { display:flex; align-items:center; justify-content:center; margin-bottom: 14px; }
.card-logo { width: 76px; height: 76px; border-radius: 999px; box-shadow: 0 12px 30px rgba(225, 29, 72, .08); }
.card-title { font-family: 'Plus Jakarta Sans', system-ui, -apple-system, Segoe UI, Roboto, 'Helvetica Neue', Arial, 'Noto Sans', 'Apple Color Emoji', 'Segoe UI Emoji'; font-size: clamp(22px, 3.6vw, 30px); margin: 8px 0 8px; font-weight: 800; letter-spacing: .1px; }
.card-sub { color: var(--muted); margin: 0 0 18px; }

/* Form */
.form { text-align: left; margin-top: 10px; }
.label { display:block; font-size: clamp(12px, 1.6vw, 13px); color: var(--muted); margin: 14px 0 8px; font-weight: 600; }
.input-group { position: relative; }
.input-icon { position: absolute; left: 12px; top: 50%; transform: translateY(-50%); color: #94a3b8; display:flex; }
.input {
	box-sizing: border-box;
	width: 100%; 
	height: 44px;
	padding: 0 40px 0 38px; 
	border-radius: 10px;
	border: 1px solid rgba(15,23,42,.12);
	outline: none;
	background: #fff;
	font-size: clamp(14px, 1.8vw, 16px);
	transition: box-shadow .2s ease, border-color .2s ease, transform .15s ease;
}
.input:hover { border-color: rgba(15,23,42,.2); box-shadow: 0 0 0 3px rgba(15,23,42,.06); }
.input.input-has-toggle { padding-right: 40px; }
.toggle-btn { position: absolute; right: 10px; top: 50%; transform: translateY(-50%); height: 28px; width: 28px; border: 0; background: transparent; color: #94a3b8; cursor: pointer; display:flex; align-items:center; justify-content:center; }
.toggle-btn:hover { color: #0f172a; }
.input::placeholder { color: #94a3b8; font-size: clamp(14px, 1.8vw, 16px); }
.input:focus { border-color: rgba(225, 29, 72, .35); box-shadow: 0 0 0 4px rgba(225, 29, 72, .10); }
.input:focus-visible { outline: 0; }

/* Primary button styled like screenshot */
.cta-btn.primary {
	margin-top: 18px;
	width: 100%;
	height: 46px;
	border-radius: 10px;
	border: 1px solid rgba(15,23,42,.14);
	background: var(--accent-2);
	color: #fff;
	font-weight: 700;
	box-shadow: 0 10px 18px var(--ring);
	transition: transform .18s ease, box-shadow .18s ease, filter .18s ease;
}
.cta-btn.primary:hover { transform: translateY(-1px); box-shadow: 0 16px 28px var(--ring-strong); filter: brightness(1.02); }
.cta-btn.primary:active { transform: translateY(0); }
.cta-btn.primary:focus-visible { outline: 0; box-shadow: 0 0 0 4px rgba(15,23,42,.14), 0 10px 18px var(--ring); }

/* Footer links under form */
.form-footer { display:flex; align-items:center; justify-content:space-between; gap: 12px; margin-top: 14px; color: var(--muted); font-size: 14px; }
.muted-link { color: var(--muted); text-decoration: none; }
.muted-link:hover { color: var(--text); }
.muted-link.strong { font-weight: 700; color: var(--text); }
.muted-text { color: var(--muted); }

/* Global footer (page) */
.footer { border-top: 1px solid rgba(15,23,42,.06); background: transparent; }
.footer-inner { padding: 24px 0; text-align: center; color: var(--muted); }

/* Animations (kept and adapted) */
.page-mounted .fade-in { opacity: 1; transform: none; }
.fade-on-scroll { opacity: 0; transform: translateY(10px); transition: opacity .6s ease, transform .6s ease; }
.fade-on-scroll.reveal { opacity: 1; transform: none; }

/* Responsive tweaks */
@media (max-width: 768px) {
	/* inputs already full width; keep toggle 10px from edge */
	.toggle-btn { right: 10px; }
}

@media (max-width: 520px) {
	.login-card { padding: 24px 16px; border-radius: 14px; }
	.card-logo { width: 68px; height: 68px; }
	.card-title { font-size: 22px; }
	.form-footer { flex-direction: column; gap: 8px; align-items: flex-start; }
}

@media (min-width: 1024px) {
	.center-stage { padding: 96px 16px; }
}

/* Reduced motion accessibility */
@media (prefers-reduced-motion: reduce) {
	* { animation: none !important; transition: none !important; }
} 